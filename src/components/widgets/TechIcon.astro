---
import { Tooltips } from "astro-tooltips";
import { Icon } from "astro-icon";

type Props = {
  name: string;
  icon: string;
  color?: string;
};

const { name, icon, color } = Astro.props as Props;
---

<li class="p-2">
  <Tooltips interactive={false} delay={[15, 150]} placement="top" />
  <span title={name}>
    <Icon name={icon} color={color} class="h-10 w-10" />
  </span>
</li>
