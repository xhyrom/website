import Layout from "@www/common/layouts/Layout.astro";
import Navbar from "@www/common/components/widgets/Navbar.astro";
import { Image } from "astro:assets";
import logo from "@www/common/assets/logo.png";
import { AGE, SOCIALS } from "@www/common/config";
---

<Layout
  title="homepage"
  schemaOrg={{
    "@context": "https://schema.org/",
    "@type": "Person",
    name: "xhyrom",
    url: "https://xhyrom.dev",
    image: "https://xhyrom.dev/favicon.ico",
    sameAs: [
      "https://twitter.com/hyrousek",
      "https://instagram.com/hyro.dev",
      "https://github.com/xHyroM",
      "https://ko-fi.com/xhyrom",
      "https://www.chess.com/member/Hyriik",
      "https://reddit.com/u/xHyroM",
      "https://wakatime.com/@xhyrom",
    ],
    jobTitle: "Developer",
  }}
>
  <Navbar />
  <main
    class="mt-24 flex flex-col items-center justify-center md:mt-64 md:flex-row"
  >
    <div class="justify-cener flex items-center">
      <Image src={logo} width={200} alt="pfp" draggable={false} />
    </div>
    <section class="text-center md:ml-6 md:text-left">
      <div class="flex flex-col drop-shadow-yellow">
        <h1 class="text-6xl font-extrabold text-white">xHyroM</h1>
        <p class="mt-2 text-xl text-gray-400">
          {AGE}-year-old computer enthusiast & student
        </p>
      </div>

      <ul class="my-5 flex justify-center text-white md:justify-start">
        {
          SOCIALS.map((social) => (
            <li class="mr-4 ">
              <a class="h-10 w-10" href={social.link} title={social.name}>
                <img
                  class="h-8 w-8 transition-all hover:-translate-y-1"
                  src={`/icons/${social.icon}`}
                  alt={`${social.name} icon`}
                />
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </main>
</Layout>
