export interface Props {
  type: BadgeType;
}

const { type } = Astro.props;

const badgeConfig = {
  [BadgeType.New]: {
    text: "NEW",
    class: "bg-green-700/20 text-green-500 border-green-500",
  },
  [BadgeType.Deprecated]: {
    text: "DEPRECATED",
    class: "bg-red-700/20 text-red-500 border-red-500",
  },
};

const { text, class: className } = badgeConfig[type];
---

<span
  class={`inline-block text-xs font-medium leading-tight rounded-full px-2 py-0.5 border ${className}`}
>
  {text}
</span>
